/* pages/user/user.wxss */
.avatar-wrapper {
  background: #f9f8f8;
  padding: 25px 0;
}
 
.avatar-wrapper .avatar {
  margin: 0 auto;
  text-align: center;
}
 
.avatar-wrapper .avatar image {
  width: 100px;
  height: 100px;
}
 
.avatar-wrapper .text {
  text-align: center;
  color: rgb(26, 20, 20);
}

.alllists{
  margin-top: 10px;
}
.listimg image {
  margin-left:  7px;
  margin-right: 10px;
  vertical-align: middle;
  width: 20px;
  height: 20px;
}
 
.content{
  display: flex;
  margin-top: 10px;
  margin-bottom: 10px;
}
 
/*分割线样式*/
.divLine{
 background: #E0E3DA;
 width: 100%;
 height: 4rpx;
}



.share { 
  height: 120rpx;
  width: 120rpx;
  position: fixed;
  bottom: 170rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  background: #16060f00;
  border-radius: 50%;
  z-index: 1;
} 
.share image {
  height: 70rpx;
  width: 70rpx;
}
.share text {
  color: rgba(12, 2, 2, 0.89);  
}

.share button {
  position: absolute;
  height: 80%;
  width: 80%;
  opacity: 0.1;
  z-index: 2;
}